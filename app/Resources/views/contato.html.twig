{% extends 'base.html.twig' %}

{% block title %}
    <title>Fale Conosco | Rogério Menezes</title>
{% endblock %}

{% block metas %}
    {{ parent() }}
    <meta name="description"
          content="Entre em contato conosco ou visite-nos na Av. Brasil 51.467, Campo Grande, Rio de Janeiro."/>
    <meta property="og:title" content="Fale Conosco"/>
    <meta property="og:description"
          content="Entre em contato conosco ou visite-nos na Av. Brasil 51.467, Campo Grande, Rio de Janeiro."/>
    <meta property="og:url" content="{{ url(app.request.get('_route')) }}"/>
    <meta property="og:image"
          content="{{ app.request.uriForPath('/images/og-facebook/og-sobre.jpg') | replace({'/app_dev.php': ''}) }}"/>
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:phone_number" content="(21) 3812-4300">
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/contato.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/pages/contato.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="cont-contato">
        <div class="cont-infos-contato">
            <div class="center-1200 content-1200">
                <ul class="lista-contatos row">
                    <li class="col-sm-3 col-xs-6">
                        <h3>Comercial</h3>
                        <span><a href="tel:552138124345">55 21 3812-4345</a></span>
                        <small>
                            <a href="mailto:comercial@rogeriomenezes.com.br">comercial@rogeriomenezes.com.br</a>
                        </small>
                    </li>
                    <li class="col-sm-3 col-xs-6">
                        <h3>Remoções</h3>
                        <span><a href="tel:552138124335">55 21 3812-4335</a></span>
                        <small>
                            <a href="mailto:rm.remocao@rogeriomenezes.com.br">rm.remocao@rogeriomenezes.com.br</a>
                        </small>
                    </li>
                    <li class="col-sm-3 col-xs-6">
                        <h3>Leilões</h3>
                        <span><a href="tel:552138124328">55 21 3812-4328</a></span>
                        <small>
                            <a href="mailto:rm.leilao@rogeriomenezes.com.br">rm.leilao@rogeriomenezes.com.br</a>
                        </small>
                    </li>
                    <li class="col-sm-3 col-xs-6">
                        <h3>Documentação</h3>
                        <span><a href="tel:">55 21 3812-4315</a></span>
                        <small>
                            <a href="mailto:rm.documentacao@rogeriomenezes.com.br">rm.documentacao@rogeriomenezes.com.br</a>
                        </small>
                    </li>
                </ul>
            </div>
        </div><!-- Fim Center -->
        <div class="clearfloat"></div>
        <div class="center-1200">
            <div class="cont-local">
                <h1 class="view-seo">Fale Conosco</h1>
                <h2>Fale conosco ou passe para uma visita</h2>
                <p>
                    <i class="fa fa-phone" aria-hidden="true"></i>
                    <a href="tel:552138124300">55 21 3812-4300</a>
                </p>
                <p><i class="fa fa-envelope" aria-hidden="true"></i> <a href="mailto:contato@rogeriomenezes.com.br">contato@rogeriomenezes.com.br</a>
                </p>
                <p><i class="fa fa-map-marker" aria-hidden="true"></i>Av. Brasil 51.467, Campo Grande, Rio de
                    Janeiro</p>
            </div>
            <div class="cont-form-contato">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {% set messages = [] %}
                {% for child in form.children %}
                    {% for error in child.vars.errors %}
                        {% set messages = messages|merge([error.message]) %}
                    {% endfor %}
                {% endfor %}
                {% if messages|length %}
                    <ul class="alert alert-warning">
                        {% for message in messages %}
                            <li>{{ message }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
                    <div class="campos-left">
                        {{ form_widget(form.nome, {'attr': {'placeholder': 'Nome'}}) }}
                        {{ form_widget(form.email, {'attr': {'placeholder': 'Email'}}) }}
                        {{ form_widget(form.telefone, {'attr': {'placeholder': 'Telefone', 'class': 'phone'}}) }}
                        {{ form_widget(form.assunto, {'attr': {'placeholder': 'Assunto'}}) }}
                    </div>
                    <div class="campos-right">
                        {{ form_widget(form.mensagem, {'attr': {'rows': 5, 'placeholder': 'Mensagem'}}) }}
                        <input tabindex="5" type="submit" value="Enviar" class="btn-form-contato submit-contato"/>
                    </div>
                {{ form_end(form) }}
            </div>
        </div><!-- Fim Center -->
    </div>

    <div class="clearfloat"></div>
    <div class="mapa">
        <iframe class="btn-block" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1837.87922067952!2d-43.64714388759272!3d-22.88538007992868!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9bfb5a1cb5aba1%3A0x42dd35e3aa4e7372!2sAv.+Brasil%2C+51467+-+Campo+Grande%2C+Rio+de+Janeiro+-+RJ!5e0!3m2!1spt-BR!2sbr!4v1511296469888"
                width="100%" height="490" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div><!-- Fim Mapa -->

{% endblock %}